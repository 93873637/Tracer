<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_track_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TrackBlackActivity"
    android:background="#ffffee"
    android:orientation="vertical">

    <!--times bar-->
    <LinearLayout
        android:id="@+id/ll_times_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:background="#a0a0a0"
        >
        <TextView
            android:id="@+id/text_current_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/time_padding_top"
            android:paddingBottom="@dimen/time_padding_bottom"
            android:text="10:29:58"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/track_text_size"
            android:textColor="#5f005f"
            android:background="#a0ffa0"
            />
        <TextView
            android:id="@+id/text_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/time_padding_top"
            android:paddingBottom="@dimen/time_padding_bottom"
            android:text="10:00:00"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/track_text_size"
            android:textColor="#303000"
            android:background="#a0a0ff"
            />
        <TextView
            android:id="@+id/text_time_elapsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/time_padding_top"
            android:paddingBottom="@dimen/time_padding_bottom"
            android:text="00:20:30"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/track_text_size"
            android:textColor="#003030"
            android:background="#ffa0a0"
            />
    </LinearLayout>

    <!-- map area -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:background="#ffffff">
        <com.liz.tracer.ui.TrackSurfaceView
            android:id="@+id/track_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            />
        <ImageView
            android:id="@+id/image_direction"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:gravity="center"
            android:background="@drawable/dir_plane" />
        <TextView
            android:id="@+id/text_test_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:text="1600/3200"
            android:textColor="#2020ff"
            android:textSize="@dimen/track_surface_text_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_bearing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:text="东北偏北 2度"
            android:textColor="#2020ff"
            android:textSize="@dimen/track_surface_text_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/text_map_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:text="20.00/20.00\n0/0"
            android:textColor="#2020ff"
            android:textSize="@dimen/track_surface_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- current speed bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#e0e0e0"
        >
        <TextView
            android:id="@+id/text_current_speed"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:background="#ff0000"
            android:textSize="@dimen/track_text_size"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_current_speed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp"
            android:text="13.9/50.1"
            android:textColor="#00ff00"
            android:textSize="@dimen/track_text_size"
            android:textStyle="bold"
            android:shadowColor="#ff000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="2"
            />
    </RelativeLayout>

    <!-- average speed bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#e0e0e0"
        >
        <TextView
            android:id="@+id/text_average_speed"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:padding="0dp"
            android:background="#ff0000"
            android:textSize="@dimen/track_text_size"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/text_average_speed_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="0dp"
            android:text="13.9/50.1"
            android:textColor="#00ff00"
            android:textSize="@dimen/track_text_size"
            android:textStyle="bold"
            android:shadowColor="#ff000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="2"
            />
    </RelativeLayout>

    <!--statis bar-->
    <LinearLayout
        android:id="@+id/ll_statis_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="@dimen/time_padding_top"
        android:paddingBottom="@dimen/time_padding_bottom"
        android:background="#efefff"
        >
        <TextView
            android:id="@+id/text_total_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="2dp"
            android:text="100km"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/track_text_size"
            android:textColor="#2020ff"
            />
        <TextView
            android:id="@+id/text_max_speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginEnd="2dp"
            android:text="0.00/0.00"
            android:gravity="end"
            android:textStyle="bold"
            android:textSize="@dimen/track_text_size"
            android:textColor="#2020ff"
            />
    </LinearLayout>

</LinearLayout>
